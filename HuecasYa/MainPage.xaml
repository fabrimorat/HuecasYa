<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuecasYa.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label Text="Protección de Datos Personales"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

            <ScrollView>
                <Label Text="Al continuar, aceptas nuestra política de tratamiento de datos personales conforme a la Ley Orgánica de Protección de Datos Personales (LOPDP). Tus datos serán utilizados únicamente para mejorar tu experiencia en esta app."
                   TextColor="{StaticResource Gray600}"
                   FontSize="14" />
            </ScrollView>

            <Button Text="Acepto y Continuar"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                Clicked="Button_Clicked_1"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
