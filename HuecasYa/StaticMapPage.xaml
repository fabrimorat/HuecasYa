<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuecasYa.StaticMapPage"
             Title="Mapa de Huecas"
             BackgroundColor="{StaticResource White}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Huecas cercanas al campus UDLA Park"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

            <Image Source="mapa.jpeg"
                   Aspect="AspectFit"
                   HeightRequest="300"
                   SemanticProperties.Description="Mapa con huecas" />

            <Label Text="Huecas disponibles"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryDark}" />

            <!-- LISTADO DE HUECAS -->
            <CollectionView x:Name="HuecasList" ItemsLayout="VerticalList" SelectionMode="Single"
                SelectionChanged="HuecasList_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="{StaticResource Primary}"
                               CornerRadius="10"
                               Padding="10"
                               Margin="0,5"
                               HasShadow="False">

                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">

                                <!-- Imagen -->
                                <Image Grid.RowSpan="3"
                                       Source="{Binding Imagen}"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFit"
                                       BackgroundColor="{StaticResource Gray100}" />

                                <!-- Nombre -->
                                <Label Grid.Column="1"
                                       Text="{Binding Nombre}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{StaticResource OffBlack}" />

                                <!-- Presupuesto -->
                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{Binding Presupuesto}"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}" />

                                <!-- CalificaciÃ³n -->
                                <Label Grid.Column="1"
                                       Grid.Row="2"
                                       Text="{Binding Calificacion}"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}" />

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
